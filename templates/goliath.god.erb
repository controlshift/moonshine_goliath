God.watch do |w|
  w.name     = "<%= configuration[:application] %>-goliath"
  w.interval = 30.seconds
  w.log      = File.join(RAILS_ROOT, 'log', "#{w.name}.god.log")
  w.uid      = '<%= configuration[:user] %>'
  w.gid      = '<%= configuration[:group] || configuration[:user] %>'
  w.env      = { 'RAILS_ENV' => RAILS_ENV, 'RACK_ENV' => RAILS_ENV, 'HOME' => '/home/<%= configuration[:user] %>' }
  w.dir      = RAILS_ROOT
  w.pid_file           = "<%= configuration[:deploy_to] + '/current'  %>/pids/#{w.name}.pid"
  w.pid_file_directory = "<%= configuration[:deploy_to] + '/current' %>/pids"
  w.start    = "<%= 'bundle exec' if File.exist?(configuration[:deploy_to] + '/current/Gemfile') %> /usr/bin/ruby server.rb -e #{RAILS_ENV} -p <%= configuration[:goliath][:port] %> -l #{w.log}"

  w.stop = "kill -QUIT `cat #{w.pid_file}`"
  w.restart = "#{w.stop} && #{w.start}"

  w.start_if do |start|
    start.condition(:process_running) do |c|
      c.interval = 5.seconds
      c.running = false
    end
  end
end

